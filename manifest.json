{
  "name": "Site Extender",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Bla",
  "homepage_url": "http://nu.nl/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "default_locale": "en",
  "options_page": "src/options/index.html",
  "permissions": [
    "chrome://favicon/",
    "contentSettings",
    "storage",
    "https://*/*"
  ],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*", "https://*/*"
      ],
      "run_at": "document_start",
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "http://*/*", "https://*/*"
      ],
      "run_at": "document_start",
      "js": [
        "js/jquery/jquery.min.js", "src/inject/inject.js"
      ]
    }
  ]
}